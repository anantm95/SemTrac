<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubjectInfo">

    <TextView
        android:id="@+id/subjectCodeAndName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Medium Text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subjectCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Medium Text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/classesAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Medium Text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Medium Text"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Medium Text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addTest"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/background_floating_material_dark"
        android:text="Enter Test Details"
        android:textColor="@color/background_material_light" />

    <Button
        android:id="@+id/viewTests"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_floating_material_dark"
        android:text="View Test Details"
        android:textColor="@color/background_material_light" />


</LinearLayout>