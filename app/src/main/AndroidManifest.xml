<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.academy.semtrac">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".FirstRunActivity"
            android:label="@string/title_activity_first_run" />
        <activity
            android:name=".NewTest"
            android:label="@string/title_activity_new_test" />
        <activity
            android:name=".SubjectInfo"
            android:label="@string/title_activity_subject_info" />
        <activity
            android:name=".SubjectAdderActivity"
            android:label="@string/title_activity_subject_adder"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ModifyAttendance"
            android:label="@string/title_activity_modify_attendance" />
        <activity
            android:name=".ViewTests"
            android:label="@string/title_activity_view_tests" />
        <activity
            android:name=".SemesterResults"
            android:label="@string/title_activity_semester_result" />
        <activity
            android:name=".WrapUpSemester"
            android:label="@string/title_activity_wrap_up_semester" />
        <activity
            android:name=".EditAttendance"
            android:label="@string/title_activity_edit_attendance" />
        <activity
            android:name=".AddNewSemester"
            android:label="@string/title_activity_new_semester"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>
    </application>

</manifest>
